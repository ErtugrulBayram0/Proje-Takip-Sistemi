
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutOgrenci.cshtml";
}

<div class="container mt-5">
    <div class="row">
        @foreach (var i in ViewBag.isler)
        {
            using (Html.BeginForm("Index", "Ogrenci", FormMethod.Post, new {@class= "col-lg-6 col-md-6 col-sm-12 col-xs-12" }))
            {
                    <div class="card border-info">
                        <div class="card-header text-center">
                            Proje Bilgileri Gönderildi
                        </div>
                        <div class="card-body">
                            <input type="hidden" name="projeID" value="@i.işlemID" />
                            <div class="mb-3">
                                @i.projeAdi
                            </div>
                        </div>
                        <div class="card-footer">
                            <button type="submit" class="btn btn-outline-info">Proje Sayfasına Git</button>
                        </div>
                    </div>
                    <br />
                }
        }
    </div>
</div>

