
@{
    ViewBag.Title = "Toplanti";
    Layout = "~/Views/Shared/_LayoutYonetici.cshtml";
}

<div>
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                Toplantı Ayarla
            </div>
            <div class="card-body">
                @using (Html.BeginForm("Toplanti", "Yonetici", FormMethod.Post))
                {
                    <div class="mb-3">
                        <label for="toplantiSelect" class="form-label">Öğrenci Seçiniz</label>
                        <select class="form-select" name="toplantiSelect" id="toplantiSelect" required>
                            <option value="" disabled selected>Öğrenci Seçiniz</option>
                            @foreach (var ogrenci in ViewBag.toplantiOgrenci)
                            {
                                <option value="@ogrenci.ogrID">@ogrenci.ogrAd @ogrenci.ogrSoyad</option>
                            }
                        </select>
                    </div>
                    <div class="form-check mt-3 mb-3">
                        <input class="form-check-input" type="checkbox" value="" id="checkDefault" name="checkDefault">
                        <label class="form-check-label" for="checkDefault">
                            Proje alan tüm öğrenciler
                        </label>
                    </div>

                    <div style="display: flex;">
                        <div style="flex: 1; display: flex; flex-direction: column; justify-content: center; align-items: center;">
                            <label for="tarihAyarla" class="form-label">Tarih Seçiniz</label>
                            <input type="date" class="form-control" id="tarihAyarla" name="tarihAyarla" />
                        </div>
                        <div style="flex: 1; display: flex; flex-direction:column; justify-content: center; align-items: center;">
                            <label for="saatAyarla" class="form-label">Saat Seçiniz</label>
                            <input type="time" class="form-control" id="saatAyarla" name="saatAyarla" />
                        </div>
                    </div>
                    <div class="mt-3">
                        <label for="toplantiAciklama" class="mb-2">Açıklama </label>
                        <input type="text" class="form-control" id="toplantiAciklama" name="toplantiAciklama" />
                    </div>

                    <div class="mb-3 mt-3">
                        <button class="btn btn-outline-primary" type="submit">Kaydet</button>

                    </div>


                }
            </div>
           

        </div>
    </div>
</div>
@if(ViewBag.Mesaj != null)
            {
                <div class="alert alert-info">@ViewBag.Mesaj</div>
            }

